  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "Bearer": {
      "description": "The authorization header is expected to contain the Bearer token (a JWT prefixed with \\'Bearer \\') of the user whose favourite resources we are acting on.",
      "type": "apiKey",
      "name": "Authorization",

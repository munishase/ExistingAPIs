  "paths": {
    "/processstoragegrid": {
      "post": {
        "tags": [
          "StorageGrid"
        ],
        "description": "Create new tenant account, keys and s3 bucket",
        "parameters": [
          {
            "name": "storagegridparams",
            "in": "body",
            "description": "Storage Grid tenant name and bucket name",
            "schema": {
              "$ref": "#/definitions/StorageGridInputParams"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New Storage account details has been configured",
            "schema": {
              "$ref": "#/definitions/StorageGridSuccessOutputParams"
            }
          },
          "400": {
            "description": "Some issue occured while configuring Storagegrid",
            "schema": {
              "$ref": "#/definitions/StorageGridFailureOutputParams"
            }
          },
          "403": {
            "description": "You do not have necessary permissions for the resource"
          }
        }
      }
    }
  },
  "definitions": {
    "StorageGridInputParams": {
      "required": [
        "tenantname",
        "bucketname"
      ],
      "properties": {
        "tenantname": {
          "type": "string",
          "uniqueItems": true
        },
        "bucketname": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "StorageGridSuccessOutputParams": {
      "required": [
        "success",
        "message"
      ],
      "properties": {
        "tenantname": {
          "type": "string",
          "uniqueItems": true
        },
        "tenantpassword": {
          "type": "string",
          "uniqueItems": true
        },
        "bucketname": {
          "type": "string",
          "uniqueItems": true
        },
        "tenantaccountid": {
          "type": "string",
          "uniqueItems": true
        },
        "tenantaccesskey": {
          "type": "string",
          "uniqueItems": true
        },
        "tenantsecretaccesskey": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "StorageGridFailureOutputParams": {
      "required": [
        "success",
        "message"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "errors": {
          "properties": {
            "status": {
              "type": "string",
              "uniqueItems": true
            },
            "description": {
              "type": "string",
              "uniqueItems": true
            },
            "actualdetail": {
              "properties": {
                "type": "object",
                "uniqueItems": true
              }
            },
            "param": {
              "properties": {
                "type": "object",
                "uniqueItems": true
              }
            },
            "datetime": {
              "type": "string",
              "uniqueItems": true
            }
          }
        }
      }
    }
  }
